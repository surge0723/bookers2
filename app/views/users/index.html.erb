<main>
  <div class="container">
  <div class="row">
    <%= render 'books/left',user:@user,book:@book %>
    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
            <% @users.each do |user| %>
            <tbody>
            <tr>
              <td>
                <%= image_tag(user.get_profile_image) %>
              </td>
              <td><%= user.name %></td>
              <td><%=link_to "Show",user_path(user) %></td>
              <% end %>
            </tr>
            </tbody>
            </thead>
          </table>
    </div>
  </div>
  </div>
</main>