<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>User info</h1>
        <%= form_with model: @user do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
          <div class="form-group">
              <label for="inputName">Name</label>
              <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%></div>
          </div>
          <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          
          <div class="form-group">
              <label for="inputIntroduction">Introduction</label>
              <div><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%></div>
          </div>
  		  <%= f.submit "Update User",class: "btn btn-secondary"  %>
  		  <% end %>
     </div>
  </div>
</div>