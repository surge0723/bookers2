<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>User info</h1>
        <%= form_with model: @user do |f| %>
          <div>
              <label for="inputName">Name</label>
              <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%></div>
          </div>
           <div>
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          
          <div>
              <label for="inputIntroduction">Introduction</label>
              <div><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%></div>
          </div>
  		  <%= f.submit "Update user" %>
  		  <% end %>
     </div>
  </div>
</div>