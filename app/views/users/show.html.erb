<main>
  <div class="container">
  <div class="row">
    <%= render 'leftuser',user:@user,book:@book %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
       <table class="table table-hover table-inverse">
          <thead>
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            </tr>
          </thead>
           <% @books.each do |book| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to book_path(book.id) do %>
                   <% if book.image %>
                    <%= image_tag(book.user.get_profile_image) %>
                   <% else %>
                    <%= image_tag "default_image.jpg" %>
                   <% end %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
     </table> 
    </div>
  </div>
  </div>
</main>