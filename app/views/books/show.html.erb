<main>
  <div class="container">
  <div class="row">
    <%= render 'left',user:@user,book:@book_new %>
    <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
            <tbody>
                <tr>
                  <td><%=image_tag(@book.user.get_profile_image) %>
                  <br>
                  <%= link_to @user.name, user_path(@user.id) %>
                  </br>
                  </td>
                  <td><%= link_to @book.title, book_path(@book.id) %></td>
                  <td><%=@book.body %></td>
                  <% if @book.user == current_user %>
                  <td><a class="btn btn-sm btn-success" href="<%= edit_book_path(@book) %>">Edit</a></td>
                  <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger " rel="nofollow" data-method="delete" href="<%=book_path(@book) %>">Destroy</a></td>
                  <% end %>
                </tr>
            </tbody>
        </table>
    </div>
    </div>
</main>

        
