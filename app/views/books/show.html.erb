<main>
  <div class="container">
  <div class="row">
    <%= render 'left',user:@user,book:@book %>
    <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table>
            <tbody>
                <tr>
                  <td><%=image_tag(@book.user.get_profile_image) %></td>
                  <td><%=@book.title %></td>  
                  <td><%=@book.body %></td>
                  <% if @book.user == current_user %>
                  <td><%=link_to "edit",edit_book_path(@book) %></td>
                  <td><%= link_to "delete", book_path(@book), method: :delete %></td>
                  <% end %>
                </tr>
            </tbody>
        </table>
    </div>
    </div>
</main>

        
