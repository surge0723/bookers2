<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
          <div>
          <label for="inputTitle">title</label>
          <div><%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title"%>
          </div>
          </div>
          <div>
          <label for="inputBody">body</label>
          <div><%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"body"%>
          </div>
          </div>
  		  <%= f.submit "Update Book" %>
  		  <% end %>
  		
  		<a>
  		  <%= link_to 'Show', book_path(@book), class: "book_show" %> 
  		</a>
  		|
  		<a class="back" href="/books">Back</a>
    </div>
  </div>
</div>