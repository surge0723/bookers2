<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
    </tbody>
  </table>
  
  <% if user == current_user %>
    <p><%= link_to "編集ボタン後で追加", edit_user_path(user) %></p>
  <% end %>
    <h2>New Book</h2>
        <%= form_with model: book, local: true do |f| %>
    <h4>title</h4>
        <%= f.text_field :title %>
    <h4>opinion</h4>
        <%= f.text_area :body %>
    <%= f.submit '投稿' %>
    <% end %>
</div>