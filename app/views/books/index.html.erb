<h1>Books#index</h1>
<h1>画像投稿フォーム</h1>
<%= form_with model: @book, local: true do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>


<% @books.each do |book| %>
  <div>
    <%= image_tag book.get_image %>
    <p>投稿ユーザー画像:   <%= image_tag(book.user.get_profile_image) %></p>
    <p>body：<%= book.body %></p>
    <p>ユーザーネーム：<%= book.user.name %></p>
  </div>
<% end %>
