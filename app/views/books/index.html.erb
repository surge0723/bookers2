<main>
  <div class="container">
  <div class="row">
    <%= render 'left',user:@user,book:@book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            </tr>
          </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                <%= image_tag(book.user.get_profile_image) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %>
              <td><%= book.body %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
  </div>
</main>
